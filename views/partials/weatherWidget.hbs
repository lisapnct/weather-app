<div class="container">
  <div class="weather-side">
    <div class="weather-gradient"></div>
    <div class="date-container">
      <h2 class="date-dayname"></h2>
      <span class="date-day"></span>
      <i class="location-icon" data-feather="map-pin"></i> <span class="location">enter a location</span>
    </div>
    <div class="weather-container">
      <i class="weather-icon"></i>
      <h1 class="weather-temp"></h1>
      <h3 class="weather-desc"></h3>
    </div>
  </div>

  <div class="info-side">
    <div class="today-info-container">
      <div class="today-info">
        <div class="humidity">
          <span class="title">HUMIDITY</span>
          <span id="humidity" class="value"></span>
          <div class="clear"></div>
        </div>
        <div class="wind">
          <span class="title">WIND</span>
          <span id="wind" class="value"></span>
          <div class="clear"></div>
        </div>
      </div>
    </div>

    <div class="week-container">
      <ul class="week-list">
        <li>
          <i class="day-icon wi-sunrise wi"></i>
          <span class="day-name">Sunrise</span>
          <span id="sunrise" class="day-temp"></span>
        </li>
        <li>
          <i class="day-icon wi wi-sunset"></i>
          <span class="day-name">Sunset</span>
          <span id="sunset" class="day-temp"></span>
        </li>
      </ul>
    </div>

    <div class="location-container">
      {{!-- <a href="/favorites"> --}}
        <button class="location-button">
          <span> + add to favorites</span>
        </button>
      {{!-- </a> --}}

      <a href="/favorites">
        <button class="btn white favorites">
          <span>browse favorites</span>
        </button>
      </a>
    </div>

  </div>
</div>